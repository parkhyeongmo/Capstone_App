<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".InspectFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="right"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="20dp"
            android:text="사용자명"

            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/btn_account"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/white"
            android:src="@drawable/ic__853767_kashifarif_user_profile_person_account_icon"

            android:text="계정"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@id/constraintLayout3">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="부품 검사"
            android:textSize="40sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"

        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout3">

        <ImageView
            android:id="@+id/imagePreview"
            android:src="@drawable/ic_defaultimage"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_margin="30dp"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_margin="5dp">

            <Button
                android:id="@+id/btn_gallery"
                android:layout_width="125dp"
                android:layout_height="50dp"
                android:text="갤러리에서 선택"/>

            <Button
                android:id="@+id/btn_shot"
                android:layout_width="125dp"
                android:layout_height="50dp"
                android:text="카메라로 촬영"/>

        </LinearLayout>

        <Button
            android:id="@+id/btn_summit"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:text="검사하기"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/btn_inspect"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_weight="1"

            android:background="@color/black"
            android:scaleType="fitXY"
            android:text="inspect"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btn_list"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_weight="1"

            android:background="@color/black"
            android:scaleType="fitXY"
            android:text="list"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btn_call"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_weight="1"

            android:background="@color/black"
            android:scaleType="fitXY"
            android:text="call"
            android:textColor="@color/white" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>